@model MVCProject.Models.Course

@{
    ViewData["Title"] = "Update";
}

@{SelectList tracks;
    if(Model !=null)
    {
        tracks = new SelectList(ViewBag.Trs,"Id","Name",Model.TrackId);
    }
    else
    {
        tracks = new SelectList(ViewBag.Trs,"Id","Name");
    }
}
<div class="container">
    <h1>Update Courses</h1>
    <hr class="m-0/>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Update">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Duration" class="control-label"></label>
                    <input asp-for="Duration" class="form-control" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
                    <div>
                <label asp-for="TrackId"></label>
                <select asp-for="TrackId" asp-items="tracks" class="form-control"></select>
                <span class="text-danger" asp-validation-for="TrackId"></span>
            </div> <br />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="GetAll" class="btn btn-secondary ms-2">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
