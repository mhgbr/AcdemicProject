@model Student

@{
    SelectList tracks;
    if(Model !=null)
    {
        tracks = new SelectList(ViewBag.Trs,"Id","Name",Model.Track_Id);
    }
    else
    {
        tracks = new SelectList(ViewBag.Trs,"Id","Name");
    }      
}
<div class="container mt-3">
    <div class="row col-md-4">
        <form asp-action="Create" asp-controller="Student">
            <div>
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Age"></label>
                <input asp-for="Age" class="form-control" placeholder="Enter your age!">
                <span asp-validation-for="Age" class="text-danger"></span> 
            </div>
            <div>
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" placeholder="Enter your Address!">
                <span asp-validation-for="Address" class="text-danger"></span> 
            </div>
            <div>
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your Phone number please!">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span> 
            </div>
            <div>
                <label asp-for="Track_Id"></label>
                <select asp-for="Track_Id" asp-items="tracks" class="form-control"></select>
                <span class="text-danger" asp-validation-for="Track_Id"></span>
            </div>
            <input type="submit" value="Create" class="btn btn-primary mt-3"/>
            <a asp-action="GetAll" class="btn btn-secondary ms-2 mt-3">Back</a>
        </form>
    </div>

</div>
@section Scripts{
    @*<script src="~/lib/jquery/dist/jquery.js"></script>*@
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js">
    </script>
}