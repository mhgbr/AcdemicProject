<body>
  <!-- ======= Header ======= -->
  <header id="header" class="fixed-top">
    <div class="container d-flex align-items-center">

      <h1 class="logo me-auto"><a asp-action="Home" asp-controller="Home">Academic</a></h1>
            @if (User.Identity.IsAuthenticated)
            {
                <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                @if (User.IsInRole("admin"))
                {
                    <li><a asp-action="index" asp-controller="Dashboard">Dashboard</a></li>
                    <li><a asp-action="GetAll" asp-controller="Role">Roles</a></li>
                    <li><a asp-controller="account" asp-action="SignUpAdmin">Assign Roles</a></li>
                }
                    <li><a asp-action="pricing" asp-controller="Home">Pricing</a></li>
                    <li><a asp-action="about" asp-controller="Home">About</a></li>
                    <li><a asp-action="contact" asp-controller="Home">Contact</a></li>
                </ul>
                </nav>
                <i class="bi bi-list mobile-nav-toggle"></i>
                 <div class="btn-group ms-4 me-3">
                    <img src="~/assets/img/user.png" class="dropdown-toggle" style="width:30px;cursor: pointer;" data-bs-toggle="dropdown" class="dropdown-toggle" aria-expanded="false">
                  <ul class="dropdown-menu">
                    <li class="dropdown-item" style="cursor: context-menu;">@User.Identity.Name</li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a  class="dropdown-item" asp-action="GetAll" asp-controller="Course">Courses</a></li>
                    @if (User.IsInRole("admin") || User.IsInRole("Instructor"))
                    {
                        <li><a class="dropdown-item" asp-action="GetAll" asp-controller="Student">Students</a></li>
                        <li><a  class="dropdown-item" asp-action="GetAll" asp-controller="Instructor">Instructors</a></li>
                    }
                    <li><a  class="dropdown-item" asp-action="GetAll" asp-controller="Track">Tracks</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" asp-action="Logout" asp-controller="Account">Log out</a></li>
                  </ul>
                </div>
                @*<!-- .navbar -->*@
            }
            else
            {
              <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                  <li><a asp-action="courses" asp-controller="Home">Courses</a></li>
                  <li><a asp-action="Instractors" asp-controller="Home">Instructors</a></li>
                  <li><a asp-action="pricing" asp-controller="Home">Pricing</a></li>
                  <li><a asp-action="about" asp-controller="Home">About</a></li>
                  <li><a asp-action="contact" asp-controller="Home">Contact</a></li>
                  <li><a asp-action="SignUp" asp-controller="Account" class="btn btn-primary ms-3" 
                    style="border-radius: 30px;padding: 5px 20px;font-size:16px;color: white;">Sign up</a></li>
                  <li><a asp-action="Login" asp-controller="Account" class="btn btn-success ms-3"
                    style="border-radius: 30px;padding: 5px 20px;font-size:16px;color: white;">Log In</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
              </nav><!-- .navbar -->
            }
    </div>
  </header><!-- End Header -->

    <div>  
        @RenderBody()  
    </div>  

